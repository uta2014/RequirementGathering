@model IEnumerable<Evaluation>

@{
    ViewBag.Title = "EvaluatorView";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-3">
        <ul class="list-group">
            @Html.ActionLink(@Resources.Notifications, "Notifications", "Home", null, new { @class = "list-group-item" })
            @Html.ActionLink(@Resources.ChangePassword, "ChangePassword", "Manage", null, new { @class = "list-group-item" })
        </ul>
    </div>
    <div class="col-md-9">

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Version)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                var description = Resource.GetPropertyValue<Evaluation>(item.Id.ToString(), "Description");
                var product = Resource.GetPropertyValue<Evaluation>(item.Id.ToString(), "Product.Name");
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Version)
                    </td>
                    <td>
                        @description
                    </td>
                    <td>
                        @product
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    @{
                if (item.IsActive == true)
                {
                    <td>
                        @Html.ActionLink(@Resources.RatingBtn, "RatingEvaluation", new { id = item.Id })
                    </td>
                }
                else
                {
                    <td>
                        @Html.ActionLink(@Resources.SeeRatingBtn, "RatingEvaluation", new { id = item.Id })
                    </td>
                }
                    }

                </tr>
            }

        </table>
    </div>
</div>

