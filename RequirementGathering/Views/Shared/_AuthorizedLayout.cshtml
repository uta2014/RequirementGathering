@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        <ul class="list-group">
            @if (new[] { "Super Administrator", "Administrator"}.Any(role => this.User.IsInRole(role)))
            {
                @Html.ActionLink("Manage Users", "Index", "Account", null, new { @class = "list-group-item" })
            }
            @if (new[] { "Super Administrator", "Administrator", "Researcher" }.Any(role => this.User.IsInRole(role)))
            {
                @Html.ActionLink("Manage Products", "Index", "Products", null, new { @class = "list-group-item" })
                @Html.ActionLink("Manage Evaluation", "Index", "Evaluations", null, new { @class = "list-group-item" })
                @Html.ActionLink("View Attribute", "ViewAttribute", "Researcher", null, new { @class = "list-group-item" })
                @Html.ActionLink("View User", "ViewUser", "Researcher", null, new { @class = "list-group-item" })
            }

            @Html.ActionLink("Notifications", "Notifications", "Home", null, new { @class = "list-group-item" })
            @Html.ActionLink("Change Password", "ChangePassword", "Manage", null, new { @class = "list-group-item" })
        </ul>
    </div>
    <div class="col-md-9">
        @RenderBody()
    </div>
</div>
